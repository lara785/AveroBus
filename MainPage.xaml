<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AverOBus.MainPage">

    <StackLayout Padding="10">
        <Label x:Name="BusInfoLabel"
               Text="Fetching next bus..."
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />

        <Button Text="On Time" Clicked="OnButtonClicked" />
        <Button Text="Delayed" Clicked="OnButtonClicked" />
        <Button Text="Full" Clicked="OnButtonClicked" />
        <Button Text="OK" Clicked="OnButtonClicked" />
    </StackLayout>
</ContentPage>
